{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": false,
        "types": [
            "node"
        ],
        "lib": [
            "ES2022"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "models",
        "bin"
    ]
}